<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meio.materi.MainActivity">


    <Button
        android:id="@+id/pta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:onClick="pta"
        android:text="Speech Organ" />

    <Button
        android:id="@+id/ptb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pta"
        android:layout_marginTop="20dp"
        android:text="American IPA"
        android:layout_alignParentEnd="true"
        android:onClick="ptb" />

    <Button
        android:id="@+id/pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ptb"
        android:layout_marginTop="20dp"
        android:text="1. how to produce sound"
        android:layout_alignParentEnd="true"
        android:onClick="pt1" />

    <Button
        android:id="@+id/pt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pt1"
        android:layout_marginTop="20dp"
        android:text="2. how to identify sound"
        android:layout_alignParentEnd="true"
        android:onClick="pt2" />

    <Button
        android:id="@+id/pt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. exercise on sound"
        android:layout_below="@+id/pt2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:onClick="pt3"/>

    <Button
        android:id="@+id/pt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Presentation"
        android:layout_below="@+id/pt3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:onClick="pt4"/>

    <Button
        android:id="@+id/pt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech To Text"
        android:layout_below="@+id/pt4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:onClick="pt5"/>
</RelativeLayout>
</ScrollView>